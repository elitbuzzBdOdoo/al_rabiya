<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="eb_product_template_inherit_form">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="product_template_code"/>
                </xpath>
                <field name="default_code" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <xpath expr="//field[@name='barcode']" position="before">
                    <field name="category_name" placeholder="Select Category"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="eb_product_template_inherit_tree">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="product_template_code"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="category_name"/>
                </xpath>
                <field name="default_code" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="eb_product_template_inherit_kanban">
            <field name="name">product.template.kanban.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//field[@name='name']" position="before">
                    [<field name="product_template_code"/>]
                </xpath>
            </field>
        </record>
    </data>
</odoo>
