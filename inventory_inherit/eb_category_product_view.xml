<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="ebproduct_category_form">
        <field name="name">ebproduct.category.view</field>
        <field name="model">ebproduct.category</field>
        <field name="arch" type="xml">
            <form string="Customer Type">
                <sheet>
                    <group string="Customer Type">
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="category_name" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ebproduct_category_tree">
        <field name="name">ebproduct.category.tree</field>
        <field name="model">ebproduct.category</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="category_name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="customer_type_action">
        <field name="name">Customer Type</field>
        <field name="res_model">customer.type</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    <menuitem id=""-->
<!--    />-->

</odoo>