<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <report
            id="action_sale_by_item_report"
            string="Sales By Item Report"
            model="sale.item.wizard"
            report_type="qweb-pdf"
            file="al_rabiya.template_sale_by_item_report"
            name="al_rabiya.template_sale_by_item_report"
    />

    <template id="template_sale_by_item_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="text-center">
                        <h2>AL RABIYA AUTO ACCESSORIES TRADING</h2>
                    </div>
                    <table>
                        <tr>
                            <td>Customer</td>
                            <td>:</td>
                            <td>
                                <t t-esc="form_data['partner_id'][name]"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>