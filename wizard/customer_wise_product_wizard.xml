<?xml version="1.0"?>
<odoo>
    <record id="form_customer_wise_product_wizard" model="ir.ui.view">
        <field name="name">customer.product.wizard.form</field>
        <field name="model">customer.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Customer Wise Product Details">
                <group>
                    <group>
                        <field name="customer_name" string="Customer Name (Optional)"/>
                    </group>
                    <group>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="pdf_action_print_customer_wise_product" type="object" string="Print pdf" class="btn-primary"/>
<!--                    <button name="xlsx_action_print_customer_wise_product" type="object" string="Print XLSX" class="btn-info"/>-->
                    <button string="Cancel" class="btn-warning" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_customer_wise_product_wizard" model="ir.actions.act_window">
        <field name="name">Customer Wise Product Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="form_customer_wise_product_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
