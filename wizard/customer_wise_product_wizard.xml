<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_sale_by_item_form" model="ir.ui.view">
        <field name="name">Sales By Item Report</field>
        <field name="model">sale.item.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="from_date"/>
                    </group>
                    <group>
                        <field name="to_date"/>
                    </group>
                </group>
                <group>
                    <field name="partner_id" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="pdf_sale_by_item_report" string="Download PDF"
                            type="object" class="btn-success"/>
                    <br/>
                    <button name="excel_sale_by_item_report" string="Download XLSX"
                            type="object" class="btn-info"/>
                    <br/>
                    <button string="Cancel" class="btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="wizard_sale_by_item_action" model="ir.actions.act_window">
        <field name="name">Sales By Item Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.item.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_sale_by_item_form"/>
        <field name="target">new</field>
    </record>
</odoo>