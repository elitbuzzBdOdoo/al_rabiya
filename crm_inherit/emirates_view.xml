<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="emirates_model_form">
        <field name="name">emirates.model.view</field>
        <field name="model">emirates.model</field>
        <field name="arch" type="xml">
            <form string="Emirates">
                <sheet>
                    <group string="Emirates">
                        <group>
                            <field name="emirate_name"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="emirates_model_tree">
        <field name="name">emirates.model.tree</field>
        <field name="model">emirates.model</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="emirates_seq" widget="handle"/>
                <field name="emirate_name"/>
                <button name="action_emirates_form" type="object" string="Details" class="btn-secondary"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="eb_emirates_model_action">
        <field name="name">Emirates</field>
        <field name="res_model">emirates.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Emirate found.
            </p>
            <p>
                You can create a new Emirate by clicking the Create button.
            </p>
        </field>
    </record>

    <menuitem id="eb_crm_inherit_main" name="CRM Menu" parent="crm.crm_menu_config"/>
    <menuitem id="eb_emirates_menu" name="Emirates" parent="eb_crm_inherit_main" action="eb_emirates_model_action"/>

    <!-- Add data records for 'emirates.model' -->
    <record id="emirate_record_1" model="emirates.model">
        <field name="emirate_name">Abu Dhabi</field>
    </record>
    <record id="emirate_record_2" model="emirates.model">
        <field name="emirate_name">Dubai</field>
    </record>
    <record id="emirate_record_3" model="emirates.model">
        <field name="emirate_name">Sharjah</field>
    </record>
    <record id="emirate_record_4" model="emirates.model">
        <field name="emirate_name">Ajman</field>
    </record>
    <record id="emirate_record_5" model="emirates.model">
        <field name="emirate_name">Umm Al Quwain</field>
    </record>
    <record id="emirate_record_6" model="emirates.model">
        <field name="emirate_name">Ras Al Khaimah</field>
    </record>
    <record id="emirate_record_7" model="emirates.model">
        <field name="emirate_name">Fujairah</field>
    </record>
</odoo>
