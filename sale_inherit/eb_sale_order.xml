<?xml version="1.0"?>
<odoo>
    <record id="eb_inherited_model_sale_view_form_new" model="ir.ui.view">
        <field name="name">eb.inherited.model.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']"
                   position="after">
                <field name="qty_available"/>
                <field name="forecast_quantity"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']"
                   position="after">
                <field name="onhand_check" invisible="1"/>
                <field name="forecast_check" invisible="1"/>
            </xpath>
        </field>
    </record>


    <menuitem id="ar_menu_sale_analysis_report"
              name="Sales Analysis"
              parent="sale.menu_sale_report"
              action="sale.action_order_report_all"
              sequence="12"
    />
    <menuitem id="menu_pdf_report_wizard"
              name="Reports"
              parent="sale.menu_sale_report"
              sequence="14"
    />
    <menuitem id="menu_customer_wise_product_wizard"
              name="Customer Wise Product Details"
              parent="menu_pdf_report_wizard"
              action="action_customer_wise_product_wizard"
              sequence="16"
    />
    <menuitem id="menu_sales_by_salesperson_wizard"
              name="Sales By Salesperson Details"
              parent="menu_pdf_report_wizard"
              action="action_customer_wise_product_wizard"
              sequence="18"
    />
    <menuitem id="menu_sales_by_customer_wizard"
              name="Sales By Customer"
              parent="menu_pdf_report_wizard"
              action="action_customer_wise_product_wizard"
              sequence="20"
    />
</odoo>